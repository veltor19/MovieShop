@model ApplicationCore.Entities.Cast

@{
    ViewData["Title"] = "Cast Details";
}

<div class="container mt-4">

    <div class="row">
        <!-- Cast Profile -->
        <div class="col-md-4">
            <div class="card">
                <img src="@Model.ProfilePath" class="card-img-top" alt="@Model.Name" />
                <div class="card-body">
                    <h3 class="card-title">@Model.Name</h3>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                </div>
            </div>
        </div>

        <!-- Movies List -->
        <div class="col-md-8">
            <h3>Movies</h3>

            @if (Model.MovieCasts == null || !Model.MovieCasts.Any()) {
                <p>This cast does not belong to any movies.</p>
            } else {
                <div class="row">
                    @foreach (var mc in Model.MovieCasts) {
                        <div class="col-md-4 mb-3">
                            <div class="card h-100">
                                <img src="@mc.Movie.PosterUrl" class="card-img-top" alt="@mc.Movie.Title" />
                                <div class="card-body">
                                    <h5 class="card-title">@mc.Movie.Title</h5>
                                    <a href="/Movies/MovieDetails/@mc.MovieId" class="btn btn-primary btn-sm">View Movie</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

</div>
